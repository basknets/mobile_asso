<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ajout_animaux"
    android:background="@color/primary">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25sp"
        app:cardElevation="50sp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Ajouter un animal"
            android:textColor="@color/black"
            android:textSize="35sp"
            />

        <TextView
            android:id="@+id/errorCreateAnimalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/red"
            android:text="error"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/createNomEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@color/primary"
            android:hint="Nom"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/createDateNaissanceEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@color/primary"
            android:hint="Date de naissance"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/createEspeceEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@color/primary"
            android:hint="Espece"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/createRaceEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@color/primary"
            android:hint="Race"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/createSexeEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@color/primary"
            android:hint="Sexe"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/createLieuEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@color/primary"
            android:hint="Lieu"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/createDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:background="@color/primary"
            android:hint="Description"
            android:padding="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/createAnimalBtn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/black"
                android:text="Ajouter un animal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>